<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".GameActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/game_back"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/outline_chevron_left_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="@string/game_details"
            android:textColor="@color/black"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.1"
                android:background="#000000" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/big_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#cc111111">
                    <ImageView
                        android:id="@+id/game_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/game_icon"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/game_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="开发 -"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/game_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="50dp"
                    android:text="关注 -"
                    android:textSize="16sp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/game_score"
                        android:textAlignment="center"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/game_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="-"
                        android:textSize="28sp"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/game_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/like_icon"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_favorite_border_24"/>
                    <TextView
                        android:id="@+id/like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/like_icon"
                        android:text="@string/game_like"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ADADAD" />
                <RelativeLayout
                    android:id="@+id/game_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/comment_icon"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/outline_comment_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/comment_icon"
                        android:text="@string/game_comment"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    </RelativeLayout>

                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ADADAD" />
                <RelativeLayout
                    android:id="@+id/game_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/forum_icon"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/outline_forum_24"/>
                    <TextView
                        android:id="@+id/forum_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/forum_icon"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/game_forum"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/scroll_pic"
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="88dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardElevation="0dp"
                    android:layout_height="match_parent">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/banner_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/banner_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="50dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/brief_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/brief_info"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:id="@+id/tag_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_toRightOf="@+id/brief_info">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/game_category_1"
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"

                        android:backgroundTint="#F6F7F9"
                        android:clickable="false"
                        android:padding="2dp"
                        android:text="-"
                        android:textColor="#878c92"
                        android:textSize="12sp"
                        app:cornerRadius="10dp" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/game_category_2"
                            android:layout_width="55dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"

                            android:backgroundTint="#F6F7F9"
                            android:clickable="false"
                            android:padding="2dp"
                            android:text="-"
                            android:textColor="#878c92"
                            android:textSize="12sp"
                            app:cornerRadius="10dp" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/game_category_3"
                            android:layout_width="55dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"

                            android:backgroundTint="#F6F7F9"
                            android:clickable="false"
                            android:padding="2dp"
                            android:text="-"
                            android:textColor="#878c92"
                            android:textSize="12sp"
                            app:cornerRadius="10dp" />
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/game_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:text="-"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_title"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/rate_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="-"
                        android:textSize="28sp"/>
                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:text="-人评分"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/rating_bar"
                        android:text="@string/tap_comment"/>
                    <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="40dp"
                        android:stepSize="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>
                </RelativeLayout>
            </LinearLayout>
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/comment_recyclerview"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:nestedScrollingEnabled="false"/>-->
            <LinearLayout
                android:id="@+id/comment_card"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/comment_back"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/comment_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/comment_writer_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"/>
                    <com.shehuan.niv.NiceImageView
                        android:id="@+id/comment_user_avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:is_circle="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/comment_user_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nickname"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/comment_user_avatar"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="22dp"/>
                    <TextView
                        android:id="@+id/comment_last_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:layout_toRightOf="@+id/comment_user_avatar"
                        android:layout_marginTop="43dp"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/star_one"
                            android:layout_width="10dp"
                            android:src="@drawable/baseline_star_rate_24"
                            android:layout_height="10dp"/>
                        <ImageView
                            android:id="@+id/star_two"
                            android:layout_width="10dp"
                            android:src="@drawable/baseline_star_rate_24"
                            android:layout_height="10dp"/>
                        <ImageView
                            android:id="@+id/star_three"
                            android:layout_width="10dp"
                            android:src="@drawable/baseline_star_rate_24"
                            android:layout_height="10dp"/>
                        <ImageView
                            android:id="@+id/star_four"
                            android:layout_width="10dp"
                            android:src="@drawable/baseline_star_rate_24"
                            android:layout_height="10dp"/>
                        <ImageView
                            android:id="@+id/star_five"
                            android:layout_width="10dp"
                            android:src="@drawable/baseline_star_rate_24"
                            android:layout_height="10dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">
                    <ImageView
                        android:id="@+id/comment_like"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/baseline_favorite_border_24"/>
                    <TextView
                        android:id="@+id/comment_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/comment_like"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="4dp"
                        android:text="@string/sample_count"/>
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/button_show_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_comment"
                android:background="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="50dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>